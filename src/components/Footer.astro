---
import Command from '@/icons/Command.astro'
---

<footer>
  <section>
    Pulsa <kbd>ctrl</kbd> + <kbd>K</kbd> para abrir la paleta de comandos.
  </section>
  <button class="show-manager">
    <Command width="32" height="32" className="command-icon" />
  </button>
</footer>

<style>
  footer {
    section {
      display: none;
      color: #3f3f4b;
      font-weight: 500;
    }

    button {
      width: auto;
      height: auto;
      padding: 10px;
      position: fixed;
      bottom: 16px;
      right: 16px;
      background-color: rgba(255, 255, 255, 0.3);
      border: 1px solid #e4e5e9;
      border-radius: 9999px;
      box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.25);
      backdrop-filter: blur(8px);
      cursor: pointer;

      .command-icon {
        color: #000;
      }
    }
  }

  @media (min-width: 520px) {
    footer {
      font-weight: 400;
      background: #fff;
      color: #030712;
      border-top: 1px solid #e4e5e9;
      position: fixed;
      bottom: 0;
      width: 100%;
      padding: 12px 6px;
      display: block;
      font-size: 16px;

      view-timeline-name: --revealing;
      view-timeline-axis: block;

      animation: linear 0.3s fadeIn;
      animation-timeline: --revealing;
      animation-range: entry 100% cover 10%;

      button {
        display: none;
      }

      section {
        display: block;
        text-align: center;

        kbd {
          font-family: "Monaspace Argon";
          background-color: #e4e5e9;
          color: #030712;
          border-radius: 4px;
          padding: 4px 6px;
          font-size: 12px;
          font-weight: 700;
        }
      }
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  @media print {
    footer {
      display: none;
    }
  }
</style>

<script>
  const d = document;
  const showManager = d.querySelector(".show-manager") as HTMLButtonElement;
  const dialog = d.querySelector(".modal") as HTMLDialogElement;

  showManager.addEventListener("click", () => {
    dialog.showModal();
  });
</script>
