---
import Section from "@/components/Section.astro";

import { projects } from "@/cv";
---

<Section title="Projects">
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, github, isActive }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a href={url} title={`Ver el proyecto ${name}`}>
                      {name}
                    </a>
                    {isActive && <span>â€¢</span>}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlights) => {
                    return <span>{highlights}</span>;
                  })}
                </footer>
              </article>
            </li>
          );
        },
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  header {
    flex: 1;
  }

  a {
    color: #111;
  }

  a:hover {
    text-decoration: underline;
  }

  h3 {
    margin-bottom: 4px;
  }

  h3 span {
    color: #22c55e;
  }

  p {
    font-size: 0.7rem;
    line-height: 1.2;
    margin-bottom: 4px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #333;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
